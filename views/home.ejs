<%- include("partials/header"); -%>
    <h1>Home Page</h1>
    <p>
        <%= homeStartingContent %>
    </p>
    <img class="img-thumbnail mx-auto d-block" width="400px"src="/images/article-details-small.jpg" alt="">
    <% posts.forEach(function(post){ %>
        <h1><%= post.title %></h1>
        <p>
            <%= post.content.substring(0,100) + " ..." %>
            <a href="/posts/<%= post.title %>">Read More</a>
        </p>
    <% }); %>

<%- include("partials/footer"); -%>
